{
  "name": "e-commerce-platform",
  "version": "0.0.1",
  "description": "A Quasar Project",
  "productName": "E-Commerce Platform",
  "author": "Nenad <nbursa@gmail.com>",
  "private": true,
  "type": "module",
  "homepage": "https://shop.nenadbursac.com",
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "clean": "quasar clean",
    "dev:server-ts": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm  --trace-deprecation server/index.ts",
    "dev:server": "node -r dotenv/config server/index.js dotenv_config_path=.env",
    "dev": "quasar dev",
    "dev:smtp": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "quasar build",
    "build:spa": "cross-env NODE_ENV=production quasar build -m spa",
    "build:server": "mkdir -p dist/server && cp server/* dist/server/",
    "build-all": "npm run build:spa && npm run build:server",
    "postinstall": "quasar prepare",
    "analyze": "quasar build --analyze",
    "build-cname": "echo $VITE_APP_DOMAIN > dist/spa/CNAME",
    "deploy": "dotenv -e .env.production -- npm run build:spa && gh-pages -d dist/spa"
  },
  "dependencies": {
    "@quasar/app-vite": "^2.0.5",
    "@quasar/extras": "^1.16.4",
    "@types/express": "^5.0.0",
    "axios": "^1.2.1",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "nodemailer": "^6.9.16",
    "nodemon": "^3.1.9",
    "pinia": "^2.3.0",
    "qrcode": "^1.5.4",
    "vue": "^3.5.13",
    "vue-easy-lightbox": "^1.19.0",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@quasar/app-vite": "^2.0.5",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.17.12",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/vue-i18n": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.30.0",
    "gh-pages": "^6.3.0",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "quasar": "^2.17.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.5.3",
    "vite": "^6.0.7",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-html": "^3.2.2",
    "vue-eslint-parser": "^9.4.3",
    "vue-i18n": "^9.14.2",
    "vue-tsc": "^2.1.10"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
